extends index

block content
	h1 Artist name is #{artist_name}
	h2 #{artist}

	button(onclick='goBack()') Go Back
	script.
		function goBack() {
		window.history.back();
		}
	br
	br
	br
	p ID is #{artist.id}. Artist Name is #{artist.artist_name}.
	
	ul
		each i in tracks
			li= #{tracks[i].artist_name}
			li= #{tracks[i].track_name}
			li= iframe(frameborder='0' src=`${tracks[i].drive_url}`)

	p Track 2: #{tracks[1].artist_name} - #{tracks[1].track_name}
	iframe(frameborder='0' src=`${tracks[1].drive_url}`)

	p Track 3: #{tracks[2].artist_name} - #{tracks[2].track_name}
	iframe(frameborder='0' src=`${tracks[2].drive_url}`)

	

	

			
