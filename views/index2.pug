    function addUsername(){
      var topspot = document.getElementById('userspot');

      if(topspot.className !== undefined){
        if(topspot.className != ""){
          topspot.innerHTML = `User: ${topspot.className}`;

          var log = document.getElementById('logtext');
          var logout = document.getElementById('logouttext');
          log.innerHTML = 'Your Dashboard';
          logout.style.display = 'block';

        }else{
          topspot.style.display = 'none';
        }
      }else{
        topspot.style.display = 'none';
      }

      var bottomspot = document.getElementById('userspot2');
      if(bottomspot.className !== undefined){
        if(bottomspot.className != ""){
          bottomspot.innerHTML = `User: ${bottomspot.className}`;

          var log2 = document.getElementById('logtext2');
          var logout2 = document.getElementById('logouttext2');
          log2.innerHTML = 'Your Dashboard';
