extends index2

block content
	h1 TUNE SUBMIT
	form
		input(type='button', value='Go Back', onclick="self.location='https://riddim-archive.herokuapp.com/faq'")
	
	- var message = msg;
	- var message2 = msg2;

	h2 Artist Submission (Please only submit yourself!) 
	p Note: You can submit released tunes, or even old exclusives if you wish to do so. I will only be uploading these kinds of tunes with the artist's permission.
	form(method='POST', action='/submission', enctype='multipart/form-data')
		.label Artist Name:
		div.form-group
			input#artist_name.form-control(type='text', name='artist_name')
		.label Crew:
		div.form-group
			label(for='crew') 
			input#crew.form-control(type='text', name='crew')
		.label Country:
		div.form-group
			label(for='country')  
			input#country.form-control(type='text', name='country')
		.label Info (Short sentence or two about you and your style, Be creative!):
		div.form-group
			label(for='info')  
			input#info.form-control(type='text', name='info')
		.label Upload Page Image (please make this at least 275px x 275px - square image Preferred):
		div.form-group
			label(for='img')  
			input#img.form-control(type='file', name='img')
		.label Please submit private download link, OR MP3, WAV or ZIP
		.label Download Link
		div.form-group
			label(for='link') 
			input#link.form-control(type='text', name='link')
		.label Upload File:
		div.form-group
			label(for='filey')
			input#filey.form-control(type='file', name='filey')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	p  #{message}
	br
	br
	br
	br
	h2 Add Track (Non-Artist Submission)
	p Note: This is only to submit free tunes from artists that the library is missing. NO PLATES or Released tunes will be posted without Artist/Label Permission. I will verify.
	form(method='POST' action='/tracksubmission')
		div.form-group
			label(for='track_name') Track Name:
			input#track_name.form-control(type='text', name='track_name')
		div.form-group
			label(for='artist_name') Artist Name: 
			input#artist_name.form-control(type='text', name='artist_name')
		p Submit Private link OR MP3, WAV or ZIP
		div.form-group
			label(for='link') Song Links ()
			input#link.form-control(type='text', name='link')
		div.form-group
			label(for='filey') Upload File: 
			input#filey.form-control(type='file', name='filey')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	p  #{message}