extends index3

block content
	h1 TRACK C.R.U.D
	form
		input(type='button', value='Go Back', onclick="self.location='https://riddim-archive.herokuapp.com/dashboard'")

	- var message = msg;
	- var message2 = msg2;
	//- var message3 = msg3;

	.labelg #{message}
	.labelg #{message2}

	h2 Add Track
	.contactdiv
		.contact
			form(method='POST' action='/trackcreate')
				.label Track Name:
				br
				div.form-group
					input#track_name.form-control(type='text', name='track_name')
				br

				.label Artist Name:
				br
				div.form-group
					input#artist_name.form-control(type='text', name='artist_name')
				br

				.label Drive URL:
				div.form-group
					input#drive_url.form-control(type='text', name='drive_url')
				br

				div
					button.btn.btn-primary.btn-block(type='submit') Submit
	br
	br
	br
	br
		
	h2 Delete Track
	.contactdiv
		.contact
			form(method='POST' action='/trackdelete')
				.label Track Name:
				br
				div.form-group
					input#track_name.form-control(type='text', name='track_name')
				br
		
				div
					button.btn.btn-primary.btn-block(type='submit') Submit
	
