extends index3

block content
	h1 TRACK C.R.U.D
	br
	form
		input(type='button', value='Go Back', onclick="self.location='https://riddim-archive.herokuapp.com'")
	br
	br
	
	h2 Add Track
	form(method='POST' action='/trackcreate')
		div.form-group
			label(for='track_name')  Track Name:
			input#track_name.form-control(type='text', name='track_name')
		div.form-group
			label(for='artist_name') Artist Name: 
			input#artist_name.form-control(type='text', name='artist_name')
		div.form-group
			label(for='drive_url') Drive URL: 
			input#drive_url.form-control(type='text', name='drive_url')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	br

	br
	br
	
	h2 Edit Track
	form(method='POST' action='/trackedit')
		div.form-group
			label(for='username')  Username:
			input#username.form-control(type='text', name='username', value=`${username}`)
		div.form-group
			label(for='password') Password: 
			input#password.form-control(type='password', name='password')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	br

	br
	br
	
	h2 Delete Track
	form(method='POST' action='/trackdelete')
		div.form-group
			label(for='username')  Username:
			input#username.form-control(type='text', name='username', value=`${username}`)
		div.form-group
			label(for='password') Password: 
			input#password.form-control(type='password', name='password')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	br

