extends index3

block content
	h1 TRACK C.R.U.D
	br
	form
		input(type='button', value='Go Back', onclick="self.location='https://riddim-archive.herokuapp.com'")
	br
	br
	
	h2 Add User
	form(method='POST' action='/trackcreate')
		div.form-group
			label(for='username')  Username:
			input#username.form-control(type='text', name='username', value=`${username}`)
		div.form-group
			label(for='password') Password: 
			input#password.form-control(type='password', name='password')
		p User Access Level:
		div.form-group
			input#3.form-control(type='radio', name='accesslevel', value=3)
			label(for='3') Admin
			br
			input#2.form-control(type='radio', name='accesslevel', value=2)
			label(for='2') Mod
			br
			input#1.form-control(type='radio', name='accesslevel', value=1)
			label(for='1') Standard
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	br

	br
	br
	
	h2 Delete User
	form(method='POST' action='/trackdelete')
		div.form-group
			label(for='username')  Username:
			input#username.form-control(type='text', name='username')
		div
			button.btn.btn-primary.btn-block(type='submit') Submit
	br

